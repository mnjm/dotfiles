[user]
    email = manjunat.mohan@gmail.com
    name = Manjunath Mohan

[alias]
    l = log --pretty=oneline --graph --abbrev-commit
    ll = log --graph --abbrev-commit
    lt = log --graph --abbrev-commit --tags
    s = status -s
    ss = status
    d = diff
    ds = diff --staged
    dt = difftool -y
    b = branch
    c = commit
    a = add
    co = checkout
    p = push
    pl = pull
    amend = commit --amend
    f = fuzzy
    fs = fuzzy status
    link = !git-link.sh

[core]
    pager = delta
    editor = nvim
    excludesfile = ~/.gitignore

[pager]
    diff = delta --side-by-side
    d = delta --side-by-side
    ds = delta --side-by-side

[color]
    ui = auto

[difftool]
    prompt = true

[diff]
    tool = nvimdiff
    colorMoved = default

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[help]
    autocorrect = 0

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false # required for git 2.37.0

[include]
    path = ~/.git-delta_themes.config

[delta]
    features = calochortus-lyallii
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = false

[merge]
    conflictstyle = diff3

[init]
    defaultBranch = main
