#!/usr/bin/env bash

# requires brightnessctl
# if perm error run: sudo chmod +s $(which brightnessctl)

display_help() {
    echo "screen-brightness up/down"
}

get_screen_brightness() {
    local current=$(brightnessctl get)
    local max=$(brightnessctl max)
    local percent=$(echo "($current*100)/$max" | bc)
    echo "Screen Brightness: $percent%"
}
case $1 in
    up)   brightnessctl set +10% >> /dev/null && notify-send "Increasing screen brightness" "$(get_screen_brightness)";;
    down)   brightnessctl set 10%- >> /dev/null && notify-send "Reducing screen brightness" "$(get_screen_brightness)";;
    *) display_help;;
esac
