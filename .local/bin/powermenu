#!/usr/bin/env bash

chosen=$(printf "  Power Off\n  Restart\n  Suspend\n󰍃  Quit i3\n  Lock" | rofi -dmenu -i -theme-str '@import "power.rasi"')

case "$chosen" in
	"  Power Off") poweroff ;;
	"  Restart") reboot ;;
	"  Suspend") systemctl suspend ;;
	"󰍃  Quit i3") i3-msg exit ;;
	"  Lock") loginctl lock-session ;;
	*) exit 1 ;;
esac
