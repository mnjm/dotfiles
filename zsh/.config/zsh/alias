alias ls='ls --color=auto --group-directories-first'                                   # ls
alias l='exa --color=auto --group-directories-first'                                   # ls
alias ll='exa -laFh --color=auto --group-directories-first'
alias grep='grep --color=auto'                                                          # Grep with colors
alias ..='cd ..'
alias copi='xclip -selection clipboard'                                                 # Xclip to work with Selection Clipboard
alias rm='safe_rm'
alias mv='mv -vi'						                                                # Confirm overwrite before moving
alias cp='cp -vi'                                                                       # Confirm overwrite before copying
alias ppath='readlink -f'                                                               # Copy path of file
alias gopen='xdg-open $1 2>/dev/null'                                                   # Open file graphically
alias py='python3'                                                                      # Python Alias
alias vf='nvim +"Telescope find_files"'                                                 # Open nvim with telescope to fzf find a file
alias g='git'                                                                           # git
alias vim=nvim                                                                          # Replace vim with nvim
alias v=nvim
alias dirs='dirs -v'                                                                    # Show pushd stack with numbers. cd to a dir in stack by cd ~<no>
alias extract='$HOME/.config/zsh/scripts/extract.zsh'                                   # Oh-my-zsh extract script
alias otrash='xdg-open trash:/// 2>/dev/null'                                           # Open trash
alias ffzf="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"    # fzf file find with preview
