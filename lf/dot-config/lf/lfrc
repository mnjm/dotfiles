# set shell zsh
set shellopts '-eu'
set ifs "\n"
set scrolloff 5
set hidden true
set drawbox true
set ignorecase true
set info size
set icons true
set autoquit true
set previewer '~/.config/lf/preview'

cmd open ${{
    test -L $f && f=$(readlink -f $f)
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}
